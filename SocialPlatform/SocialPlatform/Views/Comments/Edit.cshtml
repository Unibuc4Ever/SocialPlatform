@model SocialPlatform.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<h3 style="color: slategray">Edit Comment</h3>


@using (Html.BeginForm(actionName: "Edit", controllerName: "Comments"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.CommentId)

    <div style="color:crimson">
        @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.TextBoxFor(m => m.Content, new { @class = "mdl-textfield__input" })
            @Html.LabelFor(m => m.Content, new { @class = "mdl-textfield__label" })
        </div>
    </div>
    <br />

    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">Update Comment</button>
    <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" href="/Posts/Show/@Model.PostId">Cancel</a>
}
