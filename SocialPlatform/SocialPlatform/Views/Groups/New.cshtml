@model SocialPlatform.Models.Group

@{

}

<h3 style="color: slategray">Create Group</h3>

@using (Html.BeginForm(actionName: "New", controllerName: "Groups"))
{
    <div style="color:crimson">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.TextBoxFor(m => m.Name, new { @class = "mdl-textfield__input" })
            @Html.LabelFor(m => m.Name, new { @class = "mdl-textfield__label" })
        </div>
    </div>
    <br />
    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">Creaza Grup</button>
}


