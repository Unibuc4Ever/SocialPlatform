@model SocialPlatform.Models.Post

@{
	ViewBag.Title = "Edit";
}


@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts"))
{
	@Html.HttpMethodOverride(HttpVerbs.Put)
	<br />
	@Html.HiddenFor(m => m.PostId)

	@Html.Label("title", "Titlu Articol")
	<br />
	@Html.EditorFor(m => m.Title)
	@Html.ValidationMessage("title", null, new { @class = "text-danger" })
	<br />
	<br />
	@Html.Label("text", "Continut Articol")
	<br />
	@Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
	@Html.ValidationMessage("text", null, new { @class = "text-danger" })
	<br />
	<br />
	<button class="btn btn-sm btn-success" type="submit">Modifica articol</button>
}