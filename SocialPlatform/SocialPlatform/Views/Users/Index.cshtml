@using SocialPlatform.Models

@model IEnumerable<ApplicationUser>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3>@TempData["message"]</h3>

<a class="btn btn-sm btn-success" href="/Users/FriendRequest">Send Friend Request</a>
<a class="btn btn-sm btn-success" href="/Posts/New">Create A Post</a>
<a class="btn btn-sm btn-success" href="/Posts/Index">View All Posts</a>
<a class="btn btn-sm btn-success" href="/Users/SentFriendRequests">View Sent Friend Requests</a>
<a class="btn btn-sm btn-success" href="/Users/ReceivedFriendRequests">View Received Friend Requests</a>
<a class="btn btn-sm btn-success" href="/Users/Friends">View Friend</a>

<br />

@foreach (ApplicationUser user in Model)
{
	<p>Nume: @user.FirstName @user.LastName</p>
	<p>ID: @user.Id</p>
	<h4>Friends</h4>
	<ul>
		@foreach (ApplicationUser friend in user.Friends)
		{
			<li>@friend.FirstName @friend.LastName  --  @friend.Id</li>
		}
	</ul>
	<h4>Sent requests</h4>
	<ul>
		@foreach (ApplicationUser friend in user.SentFriendRequests)
		{
			<li>@friend.FirstName @friend.LastName  --  @friend.Id</li>
		}
	</ul>
	<h4>Received Requests</h4>
	<ul>
		@foreach (ApplicationUser friend in user.ReceivedFriendRequests)
		{
			<li>@friend.FirstName @friend.LastName  --  @friend.Id</li>
		}
	</ul>
	<hr />

}

