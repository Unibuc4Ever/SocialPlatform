@model SocialPlatform.Models.RegisterViewModel

<h3 style="color: slategray">Settings</h3>


@using (Html.BeginForm(actionName: "Settings", controllerName: "Users"))
{
    <div style="color:crimson">
        @Html.ValidationSummary()
    </div>

    @Html.HiddenFor(m => m.Email)
    @Html.HiddenFor(m => m.Password)
    @Html.HiddenFor(m => m.ConfirmPassword)


    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "mdl-textfield__input" })
            @Html.LabelFor(m => m.FirstName, new { @class = "mdl-textfield__label" })
        </div>
    </div>

    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.TextBoxFor(m => m.LastName, new { @class = "mdl-textfield__input" })
            @Html.LabelFor(m => m.LastName, new { @class = "mdl-textfield__label" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.WallIsVisible)
                @Html.LabelFor(m => m.WallIsVisible, "Display Wall Publicly")
            </div>
        </div>
    </div>
    <br />
    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">Save Changes</button>
}

<br />
<br />
<hr />
<br />
<br />

